@using Microsoft.Ajax.Utilities
@model RosterCheck_ASPNET.Models.GuildModel

@if (Model != null)
{
<table>

    @*table column names*@
    <tr>
        <td>
            Name
        </td>
        <td>
            Realm
        </td>
        <td>
            Class
        </td>
        <td>
            Race
        </td>
        <td>
            Spec
        </td>
        <td>
            Role
        </td>
        <td>
            Guild rank
        </td>
    </tr>

    @foreach (var member in Model.Members.OrderBy(x => x.Rank))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => member.Character.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.Character.Realm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.Character.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.Character.RaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.Character.Spec.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.Character.Spec.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.RankName)
            </td>
        </tr>
    }
</table>
}